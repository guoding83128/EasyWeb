{
  "name": "my-razzle-app",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "clean-bundle": "rm -f build/public/static/js/bundle.js && rm -f build/public/static/css/bundle.css",
    "copy-bundle-js": "cp build/public/static/js/*.js build/public/static/js/bundle.js",
    "copy-bundle-css": "cp build/public/static/css/*.css build/public/static/css/bundle.css",
    "start": "yarn clean-bundle && yarn copy-bundle-js && yarn copy-bundle-css && razzle start",
    "build": "razzle build",
    "test": "razzle test --env=jsdom",
    "start:prod": "NODE_ENV=production node build/server.js",
    "develop": "yarn build && yarn start"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "cookie-parser": "^1.4.3",
    "cuid": "^2.1.0",
    "express": "^4.16.2",
    "morgan": "^1.9.0",
    "nunjucks": "^3.0.1",
    "prop-types": "^15.6.0",
    "raf": "^3.4.0",
    "razzle": "^0.8.11",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0"
  },
  "devDependencies": {
    "babel-plugin-module-alias": "^1.6.0",
    "module-alias": "^2.0.3"
  },
  "_moduleAliases": {
    "@server": "./dist/server",
    "@client": "./dist/client",
    "@ui": "./dist/ui"
  }
}
